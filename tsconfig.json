{
    "version": "1.8.0",
    "compilerOptions": {
        "lib": ["es5", "es2015.promise"],
        "outDir": "build/es5",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
